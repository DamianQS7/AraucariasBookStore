@model List<CoverType>
@{
    ViewData["Title"] = "Cover Type List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create a New Cover Type
            </a>
        </div>
    </div>

    @if(Model.Count > 0)
    {
        <table class="table table-bordered table-stripped" style="width:100%">
            <thead>
                <tr>
                    <th>CoverType Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(CoverType coverType in Model)
                {
                    <tr>
                        <td width="50%">@coverType.Name</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-area="Admin" asp-action="Edit" asp-controller="CoverType" asp-route-id="@coverType.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-area="Admin" asp-action="Delete" asp-controller="CoverType" asp-route-id="@coverType.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no cover types to display at the moment.</p>
    }

</div>

